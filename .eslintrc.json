{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        // Turn on/off rules here as needed
        "quotes": "off",
        "max-len": "off",
        "eol-last":"off",
        "spaced-comment":"off",
        "comma-dangle":"off"
    }
}
